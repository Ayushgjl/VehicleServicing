<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    tools:context=".BookingActivity">

    <TextView
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Your Servicing Center"
        android:textSize="20sp"
        android:textColor="#800000"
        android:gravity="center"
        android:layout_marginTop="15sp"
        />

    <EditText
        android:id="@+id/full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:layout_marginTop="15sp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:layout_marginTop="15sp"
        />

    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:layout_marginTop="15sp"
        />

<AutoCompleteTextView
    android:id="@+id/vtype"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Select Your Vehicle Model"
    android:completionThreshold="1"
    android:layout_marginTop="15sp"
    android:completionHint="Select Your Vehicle Type"
    />

    <AutoCompleteTextView
        android:id="@+id/ctype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Your Car "
        android:completionThreshold="1"
        android:layout_marginTop="15sp"
        android:completionHint="Select Your Car"
        />

    <AutoCompleteTextView
        android:id="@+id/stype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Your Servicing "
        android:completionThreshold="1"
        android:layout_marginTop="15sp"
        android:completionHint="Select Your Car"
        />

    <EditText
        android:id="@+id/cnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Vehicle Number "
        android:layout_marginTop="15sp"
        />

    <EditText
        android:id="@+id/problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Problems On Vehicle"
        android:layout_marginTop="15sp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:hint="Select Date"
            android:textSize="21sp"
            />

        <Button
            android:id="@+id/btndate"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:background="@drawable/buttonblue"
            android:textColorHint="#"
            android:hint="Select Date Picker" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:hint="Select Date"
            android:textSize="21sp"
            />

        <Button
            android:id="@+id/btntime"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:background="@drawable/buttonblue"
            android:hint="Select Time Picker"
            android:textColorHint="#"
            />


    </LinearLayout>

    <Button
        android:id="@+id/btnbook"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Book Now"
        android:textColorHint="#800000"
        android:textSize="20sp"
        android:background="@drawable/roundbutton"

        />






</LinearLayout>